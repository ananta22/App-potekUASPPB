<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="173dp"
        android:layout_height="56dp"
        android:layout_marginBottom="51dp"
        android:fontFamily="@font/gentium_book_basic"
        android:text="Welcome, "
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dokterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconImage" />

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="229dp"
        android:layout_height="115dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/WelcomeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/appiconforeground" />

    <Button
        android:id="@+id/beliObat"
        android:layout_width="148dp"
        android:layout_height="77dp"
        android:layout_marginBottom="189dp"
        android:fontFamily="@font/gentium_book_basic"
        android:text="Beli Obat"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dokterButton" />

    <Button
        android:id="@+id/dokterButton"
        android:layout_width="143dp"
        android:layout_height="84dp"
        android:layout_marginBottom="39dp"
        android:fontFamily="@font/gentium_book_basic"
        android:text="Jadwal Dokter"
        android:textColorLink="#00897B"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/beliObat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="500dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/iconImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle_45" />

</androidx.constraintlayout.widget.ConstraintLayout>